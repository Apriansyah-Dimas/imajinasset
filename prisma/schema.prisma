generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Asset {
  id             String             @id @default(cuid())
  name           String
  noAsset        String             @unique @map("no_asset")
  status         String             @default("Unidentified")
  serialNo       String?            @map("serial_no")
  purchaseDate   DateTime?          @map("purchase_date")
  cost           Decimal?
  brand          String?
  model          String?
  siteId         String?            @map("site_id")
  categoryId     String?            @map("category_id")
  departmentId   String?            @map("department_id")
  picId          String?            @map("pic_id")
  pic            String?
  imageUrl       String?            @map("image_url")
  notes          String?
  dateCreated    DateTime           @default(now()) @map("date_created")
  createdAt      DateTime           @default(now()) @map("createdat")
  updatedAt      DateTime           @updatedAt @map("updatedat")
  checkouts      AssetCheckout[]
  customValues   AssetCustomValue[]
  employee       Employee?          @relation(fields: [picId], references: [id])
  department     Department?        @relation(fields: [departmentId], references: [id])
  category       Category?          @relation(fields: [categoryId], references: [id])
  site           Site?              @relation(fields: [siteId], references: [id])
  soAssetEntries SOAssetEntry[]
  events         AssetEvent[]

  @@index([siteId])
  @@index([categoryId])
  @@index([departmentId])
  @@index([picId])
  @@map("assets")
}

model Site {
  id         String   @id @default(cuid())
  name       String   @unique
  sortOrder  Int      @default(0) @map("sort_order")
  address    String?
  city       String?
  province   String?
  postalCode String?  @map("postal_code")
  country    String?  @default("Indonesia")
  phone      String?
  email      String?
  createdAt  DateTime @default(now()) @map("createdat")
  updatedAt  DateTime @updatedAt @map("updatedat")
  assets     Asset[]

  @@map("sites")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  sortOrder   Int      @default(0) @map("sort_order")
  description String?
  createdAt   DateTime @default(now()) @map("createdat")
  updatedAt   DateTime @updatedAt @map("updatedat")
  assets      Asset[]

  @@map("categories")
}

model Department {
  id          String          @id @default(cuid())
  name        String          @unique
  sortOrder   Int             @default(0) @map("sort_order")
  description String?
  createdAt   DateTime        @default(now()) @map("createdat")
  updatedAt   DateTime        @updatedAt @map("updatedat")
  checkouts   AssetCheckout[]
  assets      Asset[]

  @@map("departments")
}

model Employee {
  id                String          @id @default(cuid())
  employeeId        String          @unique @map("employee_id")
  name              String
  email             String?         @unique
  department        String?
  position          String?
  joinDate          DateTime?       @map("join_date")
  isActive          Boolean         @default(true) @map("isactive")
  createdAt         DateTime        @default(now()) @map("createdat")
  updatedAt         DateTime        @updatedAt @map("updatedat")
  receivedCheckouts AssetCheckout[] @relation("EmployeeCheckoutReceivedBy")
  assignedCheckouts AssetCheckout[] @relation("EmployeeCheckoutAssignments")
  assets            Asset[]

  @@map("employees")
}

model SOSession {
  id             String         @id @default(cuid())
  name           String
  year           Int
  description    String?
  status         String         @default("Active")
  totalAssets    Int            @default(0) @map("total_assets")
  scannedAssets  Int            @default(0) @map("scanned_assets")
  createdAt      DateTime       @default(now()) @map("createdat")
  updatedAt      DateTime       @updatedAt @map("updatedat")
  startedAt      DateTime?      @map("started_at")
  completedAt    DateTime?      @map("completed_at")
  soAssetEntries SOAssetEntry[]
  events         AssetEvent[]

  @@map("so_sessions")
}

model SOAssetEntry {
  id           String    @id @default(cuid())
  soSessionId  String    @map("so_session_id")
  assetId      String    @map("asset_id")
  scannedAt    DateTime  @default(now()) @map("scanned_at")
  status       String    @default("Scanned")
  isIdentified Boolean   @default(false) @map("isidentified")
  tempName     String?   @map("temp_name")
  tempStatus   String?   @map("temp_status")
  tempSerialNo String?   @map("temp_serial_no")
  tempPic      String?   @map("temp_pic")
  tempNotes    String?   @map("temp_notes")
  tempBrand    String?   @map("temp_brand")
  tempModel    String?   @map("temp_model")
  tempCost     Decimal?  @map("temp_cost")
  createdAt    DateTime  @default(now()) @map("createdat")
  updatedAt    DateTime  @updatedAt @map("updatedat")
  asset        Asset     @relation(fields: [assetId], references: [id])
  soSession    SOSession @relation(fields: [soSessionId], references: [id])
  events       AssetEvent[]

  @@index([soSessionId])
  @@index([assetId])
  @@map("so_asset_entries")
}

model AssetEvent {
  id             String      @id @default(cuid())
  assetId        String      @map("asset_id")
  type           String
  actor          String?
  checkoutId     String?     @map("checkout_id")
  soSessionId    String?     @map("so_session_id")
  soAssetEntryId String?     @map("so_asset_entry_id")
  payload        String?
  createdAt      DateTime    @default(now()) @map("createdat")
  asset          Asset       @relation(fields: [assetId], references: [id])
  checkout       AssetCheckout? @relation(fields: [checkoutId], references: [id])
  soSession      SOSession?  @relation(fields: [soSessionId], references: [id])
  soAssetEntry   SOAssetEntry? @relation(fields: [soAssetEntryId], references: [id])

  @@index([assetId, createdAt])
  @@map("asset_events")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  password     String
  role         String   @default("VIEWER")
  isActive     Boolean  @default(true) @map("isactive")
  createdAt    DateTime @default(now()) @map("createdat")
  updatedAt    DateTime @updatedAt @map("updatedat")
  createdBy    String?  @map("createdby")
  backups      Backup[] @relation("UserBackups")
  logs         Log[]    @relation("UserLogs")
  creator      User?    @relation("UserCreator", fields: [createdBy], references: [id])
  createdUsers User[]   @relation("UserCreator")

  @@map("users")
}

model AssetCustomField {
  id            String             @id @default(cuid())
  name          String             @unique
  label         String
  fieldType     String             @map("field_type")
  required      Boolean            @default(false)
  isActive      Boolean            @default(true) @map("isactive")
  showCondition String?            @map("show_condition")
  options       String?
  defaultValue  String?            @map("default_value")
  description   String?
  createdAt     DateTime           @default(now()) @map("createdat")
  updatedAt     DateTime           @updatedAt @map("updatedat")
  customValues  AssetCustomValue[]

  @@map("asset_custom_fields")
}

model AssetCustomValue {
  id            String           @id @default(cuid())
  assetId       String           @map("asset_id")
  customFieldId String           @map("custom_field_id")
  stringValue   String?          @map("string_value")
  numberValue   Decimal?         @map("number_value")
  dateValue     DateTime?        @map("date_value")
  booleanValue  Boolean?         @map("boolean_value")
  createdAt     DateTime         @default(now()) @map("createdat")
  updatedAt     DateTime         @updatedAt @map("updatedat")
  customField   AssetCustomField @relation(fields: [customFieldId], references: [id], onDelete: Cascade)
  asset         Asset            @relation(fields: [assetId], references: [id], onDelete: Cascade)

  @@unique([assetId, customFieldId])
  @@map("asset_custom_values")
}

model Log {
  id        String   @id @default(cuid())
  level     String
  message   String
  data      String?
  userId    String?  @map("user_id")
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  createdAt DateTime @default(now()) @map("createdat")
  updatedAt DateTime @updatedAt @map("updatedat")
  user      User?    @relation("UserLogs", fields: [userId], references: [id])

  @@index([userId])
  @@map("logs")
}

model Backup {
  id        String   @id @default(cuid())
  name      String
  filePath  String   @map("file_path")
  fileSize  Int?     @map("file_size")
  status    String   @default("completed")
  createdAt DateTime @default(now()) @map("createdat")
  createdBy String?  @map("createdby")
  creator   User?    @relation("UserBackups", fields: [createdBy], references: [id])

  @@index([createdBy])
  @@map("backups")
}

model AssetCheckout {
  id                  String      @id @default(cuid())
  assetId             String      @map("asset_id")
  assignToId          String      @map("assign_to_id")
  departmentId        String?     @map("department_id")
  checkoutDate        DateTime    @map("checkout_date")
  dueDate             DateTime?   @map("due_date")
  notes               String?
  signatureData       String?     @map("signature_data")
  status              String      @default("OUT")
  returnedAt          DateTime?   @map("returned_at")
  returnNotes         String?     @map("return_notes")
  receivedById        String?     @map("received_by_id")
  returnSignatureData String?     @map("return_signature_data")
  createdAt           DateTime    @default(now()) @map("createdat")
  updatedAt           DateTime    @updatedAt @map("updatedat")
  receivedBy          Employee?   @relation("EmployeeCheckoutReceivedBy", fields: [receivedById], references: [id])
  department          Department? @relation(fields: [departmentId], references: [id])
  assignTo            Employee    @relation("EmployeeCheckoutAssignments", fields: [assignToId], references: [id])
  asset               Asset       @relation(fields: [assetId], references: [id])
  events              AssetEvent[]

  @@index([assetId])
  @@index([assignToId])
  @@index([departmentId])
  @@index([status])
  @@map("asset_checkouts")
}
